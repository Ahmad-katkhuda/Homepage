    <script>
        // Initialization for Lucide icons is deferred in the <head> tag
        
        // --- Language Switching Logic ---
        const langOptions = document.querySelectorAll('.lang-option');
        const langContents = document.querySelectorAll('.lang-content');
        const footerDropdownButton = document.getElementById('language-dropdown-button');
        const footerDropdownMenu = document.getElementById('language-dropdown-menu');
        const headerDropdownButton = document.getElementById('header-language-dropdown-button');
        const headerDropdownMenu = document.getElementById('header-language-dropdown-menu');
        const currentLanguageLabel = document.getElementById('current-language-label');
        const headerCurrentLanguageLabel = document.getElementById('header-current-language-label');
        
        function closeAllDropdowns() {
            footerDropdownMenu.classList.add('hidden');
            if (headerDropdownMenu) headerDropdownMenu.classList.add('hidden');
        }

        function switchLanguage(lang, fullLabel, shortLabel) {
            // Hide all content sections
            langContents.forEach(content => content.classList.add('hidden'));

            // Show the selected content section
            const selectedContent = document.getElementById(`content-${lang}`);
            if (selectedContent) {
                selectedContent.classList.remove('hidden');
            }
            
            // Update the dropdown labels
            if (currentLanguageLabel) currentLanguageLabel.textContent = fullLabel;
            if (headerCurrentLanguageLabel) headerCurrentLanguageLabel.textContent = shortLabel;
                
            // Set HTML document language attribute and apply RTL class to body for global text direction control
            document.documentElement.lang = lang;
            if (lang === 'ar') {
                document.body.classList.add('rtl');
            } else {
                document.body.classList.remove('rtl');
            }

            closeAllDropdowns();

            // Re-render Lucide icons for new content/direction
            // Check if lucide object is available (it's deferred)
            if (typeof lucide !== 'undefined') {
                setTimeout(lucide.createIcons, 50); 
            }
        }

        // Add event listeners for dropdown toggle
        [footerDropdownButton, headerDropdownButton].forEach(button => {
            if (button) {
                button.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const targetMenu = button.id === 'language-dropdown-button' ? footerDropdownMenu : headerDropdownMenu;
                    
                    // Close the other menu before opening this one
                    if (button.id === 'language-dropdown-button' && headerDropdownMenu) {
                        headerDropdownMenu.classList.add('hidden');
                    } else if (button.id === 'header-language-dropdown-button' && footerDropdownMenu) {
                        footerDropdownMenu.classList.add('hidden');
                    }

                    targetMenu.classList.toggle('hidden');
                    button.setAttribute('aria-expanded', targetMenu.classList.contains('hidden') ? 'false' : 'true');
                });
            }
        });

        // Close dropdowns when clicking outside
        document.addEventListener('click', (event) => {
            const isFooterButton = footerDropdownButton && footerDropdownButton.contains(event.target);
            const isHeaderButton = headerDropdownButton && headerDropdownButton.contains(event.target);
            
            if (!isFooterButton && !footerDropdownMenu.contains(event.target) &&
                !isHeaderButton && (!headerDropdownMenu || !headerDropdownMenu.contains(event.target))) {
                closeAllDropdowns();
            }
        });

        // Add event listeners to language options
        langOptions.forEach(option => {
            option.addEventListener('click', (event) => {
                event.preventDefault(); // Prevent link default
                const lang = event.currentTarget.dataset.lang;
                const fullLabel = event.currentTarget.dataset.label;
                const shortLabel = lang.toUpperCase(); // 'EN', 'DE', 'AR'
                switchLanguage(lang, fullLabel, shortLabel);
            });
        });

        
        // --- Scroll to Top Logic ---
        const scrollToTopBtn = document.getElementById('scroll-to-top');
        const scrollThreshold = 400; // Show button after scrolling 400px

        window.addEventListener('scroll', () => {
            if (window.scrollY > scrollThreshold) {
                scrollToTopBtn.classList.remove('hidden');
                scrollToTopBtn.style.opacity = '1';
                scrollToTopBtn.style.transform = 'translateY(0)';
            } else {
                scrollToTopBtn.style.opacity = '0';
                scrollToTopBtn.style.transform = 'translateY(10px)';
                // We keep it visible for a moment during fade-out
                setTimeout(() => {
                     if (window.scrollY <= scrollThreshold) {
                        scrollToTopBtn.classList.add('hidden');
                    }
                }, 300);
            }
        });

        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            // Set initial state to English
            switchLanguage('en', 'English (EN)', 'EN');
        });
    </script>

</body>
</html>
